<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:foreground="@drawable/selector_subtle"
    android:paddingBottom="@dimen/spacing_small"
    android:paddingLeft="@dimen/spacing"
    android:paddingRight="@dimen/spacing"
    android:paddingTop="@dimen/spacing_small">

    <include
        android:id="@+id/item_header"
        layout="@layout/view_common_item_header"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small"
        android:textColor="@color/colorTextPrimary"
        android:textSize="@dimen/dimenTextSecondary"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/item_header"
        tools:text="@string/appbar_scrolling_view_behavior"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small"
        android:textColor="@color/colorTextTertiary"
        android:textSize="@dimen/dimenTextTertiary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        tools:text="weflow.io"/>


</android.support.constraint.ConstraintLayout>