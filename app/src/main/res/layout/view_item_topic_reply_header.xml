<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

  <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:tools="http://schemas.android.com/tools"
      android:id="@+id/detail_content"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@android:color/white"
      android:foreground="@drawable/selector_subtle"
      android:paddingBottom="@dimen/spacing_small"
      android:paddingLeft="@dimen/spacing"
      android:paddingRight="@dimen/spacing"
      android:paddingTop="@dimen/spacing_small"
      >

    <RelativeLayout
        android:id="@+id/item_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

      <ImageView
          android:id="@+id/avatar"
          android:layout_width="28dp"
          android:layout_height="28dp"
          android:layout_centerVertical="true"
          tools:src="@mipmap/ic_launcher"
          />

      <TextView
          android:id="@+id/name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginLeft="@dimen/spacing_small"
          android:layout_toRightOf="@id/avatar"
          android:textColor="@color/colorTextSecondary"
          android:textSize="13sp"
          tools:text="李嘉图"
          />

      <View
          android:id="@+id/split_point"
          android:layout_width="3dp"
          android:layout_height="3dp"
          android:layout_centerVertical="true"
          android:layout_marginLeft="@dimen/spacing_small"
          android:layout_toRightOf="@+id/name"
          android:background="@drawable/split_point"
          />

      <TextView
          android:id="@+id/node"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginLeft="@dimen/spacing_small"
          android:layout_toRightOf="@+id/split_point"
          android:textColor="@color/colorTextQuaternary"
          android:textSize="13sp"
          tools:text="Android"
          />

      <TextView
          android:id="@+id/date"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:textColor="@color/colorTextQuaternary"
          android:textSize="13sp"
          tools:text="24分钟前"
          />

    </RelativeLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_header"
        android:layout_marginTop="@dimen/spacing"
        android:textColor="@color/colorTextPrimary"
        android:textSize="22sp"
        android:textStyle="bold"
        tools:text="Hacker News 使用指南：认识更多和善的朋友以及见识更多的美好事物"
        />

    <TextView
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginTop="@dimen/spacing"
        android:textColor="@color/colorTextPrimary"
        android:textSize="15sp"
        tools:text="《提问的智慧》就是一个敲门砖，它把黑客间的礼仪和准则明白地写下来。它会让你了解到一个事实，为什么那些看起来很牛的人几乎从不提问，似乎他们一进入这个行业就是牛人了。不是的，他们也有问题，但是通常在提问之前就自己解决了；不是因为他们本来就懂得怎么解决，而是解决问题的经历让他们成为牛人；最终，你只会看到网络上多了一篇文章：关于解决XXX问题的方案。
不是的，他们也有问题，但是通常在提问之前就自己解决了；不是因为他们本来就懂得怎么解决，而是解决问题的经历让他们成为牛人；最终，你只会看到网络上多了一篇文章：关于解决XXX问题的方案。」"
        />

    <ImageView
        android:id="@+id/favorite"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/body"
        android:layout_marginBottom="@dimen/spacing_small"
        android:layout_marginRight="@dimen/spacing"
        android:layout_marginTop="@dimen/spacing"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="2dp"
        android:src="@drawable/ic_favorite_normal"
        />

    <ImageView
        android:id="@+id/thumb_up"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@+id/body"
        android:layout_marginBottom="@dimen/spacing_small"
        android:layout_marginRight="@dimen/spacing"
        android:layout_marginTop="@dimen/spacing"
        android:layout_toLeftOf="@+id/favorite"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="2dp"
        android:src="@drawable/ic_thumb_up_normal"
        />

  </RelativeLayout>

  <TextView
      android:id="@+id/reply_count"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:padding="@dimen/spacing"
      android:text="共收到13条回复"
      android:textColor="@color/colorTextTertiary"
      android:textSize="12sp"
      />

</LinearLayout>