<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:foreground="@drawable/selector_subtle"
    android:paddingBottom="@dimen/spacing_small"
    android:paddingLeft="@dimen/spacing"
    android:paddingRight="@dimen/spacing"
    android:paddingTop="@dimen/spacing_small"
    >

  <RelativeLayout
      android:id="@+id/item_header"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      >

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_centerVertical="true"
        tools:src="@mipmap/ic_launcher"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/spacing_small"
        android:layout_toRightOf="@id/avatar"
        android:textColor="@color/colorTextSecondary"
        android:textSize="13sp"
        tools:text="李嘉图"
        />

    <View
        android:id="@+id/split_point"
        android:layout_width="3dp"
        android:layout_height="3dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/spacing_small"
        android:layout_toRightOf="@+id/name"
        android:background="@drawable/split_point"
        />

    <TextView
        android:id="@+id/node"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/spacing_small"
        android:layout_toRightOf="@+id/split_point"
        android:textColor="@color/colorTextQuaternary"
        android:textSize="13sp"
        tools:text="Android"
        />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/colorTextQuaternary"
        android:textSize="13sp"
        tools:text="24分钟前"
        />

  </RelativeLayout>

  <TextView
      android:id="@+id/title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/item_header"
      android:layout_marginTop="@dimen/spacing_small"
      android:textColor="@color/colorTextPrimary"
      android:textSize="15sp"
      android:textStyle="bold"
      tools:text="Hacker News 使用指南：认识更多和善的朋友以及见识更多的美好事物"
      />


  <ImageView
      android:id="@+id/favorite"
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:layout_alignParentRight="true"
      android:layout_below="@+id/title"
      android:layout_marginBottom="@dimen/spacing_small"
      android:layout_marginRight="@dimen/spacing"
      android:layout_marginTop="@dimen/spacing"
      android:background="?attr/selectableItemBackgroundBorderless"
      android:padding="2dp"
      android:src="@drawable/ic_favorite_normal"
      />

  <ImageView
      android:id="@+id/thumb_up"
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:layout_below="@+id/title"
      android:layout_marginBottom="@dimen/spacing_small"
      android:layout_marginRight="@dimen/spacing"
      android:layout_marginTop="@dimen/spacing"
      android:layout_toLeftOf="@+id/favorite"
      android:background="?attr/selectableItemBackgroundBorderless"
      android:padding="2dp"
      android:src="@drawable/ic_thumb_up_normal"
      />

</RelativeLayout>